<style>
body {
	    background-image: url(/img/wood3.png);
    background-repeat: no-repeat;
    background-position: center;
    background-size: 100%;
}
form {
	    background-color: #b3a69ee8;
    padding: 30px;
    width: 40%;
}

</style>

<form method="post" action="confirm_page">
	<center>
		<p>Please confirm your order below:</p>
	<div class="confirm_quantity">
			<% p_quantity.to_i %>
			<% if p_quantity.to_i > 1 %>
				<%= "#{p_quantity} Pizzas" %>
			<% else %>
				<%= "#{p_quantity} Pizza" %>
			<% end %><br>
			
		<label for="yes">Yes</label>
			<input type="radio" name="confirm_quantity" value="yes" required>
		<label for="no">No</label>
			<input type="radio" name="confirm_quantity" value="no">
	</div>

	<hr>
	
	<div class="confirm_size">
			<%= p_size.capitalize %><br>
			<label for="yes">Yes</label>
				<input type="radio" name="confirm_size" value="yes" required>
			<label for="no">No</label>
				<input type="radio" name="confirm_size" value="no">
	</div>

	<hr>
	
	<div class="confirm_crust">
			<%= p_crust.capitalize %><br>
			<label for="yes">Yes</label>
				<input type="radio" name="confirm_crust" value="yes" required>
			<label for="no">No</label>
				<input type="radio" name="confirm_crust" value="no">
	</div>

	<hr>

	<div class="confirm_topping">
			<% toppings.each do |top| %>
				<%= top.capitalize %>
			<%end%><br>
			<label for="yes">Yes</label>
				<input type="radio" name="confirm_topping" value="yes" required>
			<label for="no">No</label>
				<input type="radio" name="confirm_topping" value="no">
	</div>

	<hr>

	<div class="confirm_delivery">
		<%= p_delivery.capitalize %><br>
		<label for="yes">Yes</label>
				<input type="radio" name="confirm_delivery" value="yes" required>
			<label for="no">No</label>
				<input type="radio" name="confirm_delivery" value="no">
	</div>
	</center>
	<br>
	<button class="button">Submit</button>
</form>
